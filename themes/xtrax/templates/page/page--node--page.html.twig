{% include "@xtrax/header/header-1.html.twig" %}
{% set content_background_class = node.field_content_background.value %}
<section id="main-banner-page" class="position-relative page-header about-header parallax section-nav-smooth" style=" background-image: url({{ field_bg ? field_bg }}); background-size: cover; background-repeat: no-repeat; background-attachment: fixed; background-position: center -153.9px;">
  <div class="overlay overlay-dark opacity-6 z-index-1"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="page-titles whitecolor text-center padding_top padding_bottom">
          {{ node.field_inside_background.value ? node.field_inside_background.value|raw }}
        </div>
      </div>
    </div>
    {{ page.breadcrumbs }}
  </div>
</section>
<section class="{% for i,item in node.field_padding %}{{ ' ' ~ item.value }}{% endfor %} {{ content_background_class ? content_background_class }}">
  <div class="container">
    {{ page.highlighted }}
    {{ page.content }}
  </div>
</section>
{{ page.section_content }}
